{
    "compilerOptions": {
      "target": "ES2022",                   // Más moderno que ES2017
      "module": "CommonJS",                 // Ideal para backends con Node.js
      "outDir": "./dist",                   // Carpeta de salida (compilados JS)
      "rootDir": "./src",                   // Raíz de tu código TypeScript
      "strict": true,                       // Habilitar todas las verificaciones de tipo
      "esModuleInterop": true,              // Compatibilidad con módulos CommonJS/ES
      "skipLibCheck": true,                 // Mejor rendimiento
      "moduleResolution": "node",           // Esencial para módulos Node.js
      "baseUrl": "./src",                   // Base para imports absolutos
      "paths": {                            // Aliases para tus carpetas
        "@database/*": ["database/*"],
        "@controllers/*": ["controllers/*"],
        "@handlers/*": ["handlers/*"],
        "@routes/*": ["routes/*"]
      },
      "emitDecoratorMetadata": true,        // Necesario si usas decoradores (TypeORM)
      "experimentalDecorators": true,       // Para TypeORM/decoradores
      "sourceMap": true,                    // Para debugging
      "resolveJsonModule": true             // Si usas JSON en tu código
    },
    "include": ["src/**/*.ts", "src/dbConfig.ts"],             // Archivos a compilar
    "exclude": ["node_modules", "tests"]    // Excluir estos directorios
  }